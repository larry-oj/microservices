@page
@model LoginModel
@{
    ViewData["Title"] = "Register";
}

<div class="text-center">
    <h1 class="display-4">Login</h1>
    <form method="post">
        <label>
            Email: <input class="" type="email" asp-for="Email" />
        </label>
        <label>
            Password: <input type="password" asp-for="Password" />
        </label>
        <button type="submit">Submit</button>
    </form>
</div>